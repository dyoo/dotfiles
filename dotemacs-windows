; -*-Lisp-*-


;; Put backup saves in a separate directory so they're less annoying.
(setq backup-directory-alist `(("." . "~/.saves")))


(custom-set-variables
 ;; custom-set-variables was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 '(custom-enabled-themes '(tango-dark))
 '(inhibit-startup-screen t)
 '(package-selected-packages
   '(clipetty company eglot-booster flycheck go-mode kotlin-mode magit
	      rust-mode))
 '(package-vc-selected-packages
   '((eglot-booster :vc-backend Git :url
		    "https://github.com/jdtsmith/eglot-booster"))))
(custom-set-faces
 ;; custom-set-faces was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 '(default ((t (:family "Inconsolata" :foundry "PfEd" :slant normal :weight medium :height 203 :width normal)))))


;; Treesitter languages
(setq treesit-language-source-alist
      '((rust "https://github.com/tree-sitter/tree-sitter-rust")))


;; Trying to work around some weirdness with copy-and-paste.
;; https://gist.github.com/yorickvP/6132f237fbc289a45c808d8d75e0e1fb
(when (getenv "WAYLAND_DISPLAY")
  (setq interprogram-cut-function
	(lambda (text)
	  (let ((p (make-process :name "wl-copy"
				 :command '("wl-copy")
				 :connection-type 'pipe)))
	    (process-send-string p text)
	    (process-send-eof p)))))
  
(require 'package)
(add-to-list 'package-archives '("melpa" . "https://melpa.org/packages/") t)
;; Comment/uncomment this line to enable MELPA Stable if desired.  See `package-archive-priorities`
;; and `package-pinned-packages`. Most users will not need or want to do this.
;;(add-to-list 'package-archives '("melpa-stable" . "https://stable.melpa.org/packages/") t)
(package-initialize)
(package-refresh-contents)


;; Turn on kotlin mode on .kt files
(add-to-list 'auto-mode-alist '("\\.kt\\'" . kotlin-mode))

;; emacs wslg copy and paste bug workarounds
;; https://www.lukas-barth.net/blog/emacs-wsl-copy-clipboard/
(setq select-active-regions nil)
(setq select-enable-clipboard 't)
(setq select-enable-primary nil)
(setq interprogram-cut-function #'gui-select-text)


;; Rust mode
(add-hook 'rust-mode-hook
          (lambda () (setq indent-tabs-mode nil)))
(use-package rust-mode
  :init
  (setq rust-mode-treesitter-derive t))
(add-hook 'rust-mode-hook 'eglot-ensure)
(setq eglot-ignored-server-capabilities '(:documentOnTypeFormattingProvider
					  :inlayHintProvider))
;; Turn on eglot-booster
(use-package eglot-booster
	:after eglot
	:config	(eglot-booster-mode))



;; Disable control-z for sleeping - unnecessary
(global-unset-key [(control z)])


;; For company mode, turn off idle autocomplete
(add-hook 'company-mode-hook
          (lambda ()
            (setq company-idle-delay nil)
            (define-key company-mode-map (kbd "C-M-i") 'company-complete)))
